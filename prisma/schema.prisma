datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Todo {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  body      String?
  status    Status   @default(todo)
  createdAt DateTime @default(now())
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  email      String   @unique
  name       String
  profileImg String
  createdAt  DateTime @default(now())
}

enum Status {
  complete
  progress
  todo
}
